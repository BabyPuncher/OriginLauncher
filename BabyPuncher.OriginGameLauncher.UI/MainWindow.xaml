<Window x:Class="BabyPuncher.OriginGameLauncher.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BabyPuncher.OriginGameLauncher.UI"
        mc:Ignorable="d"
        Title="Origin Game Launcher" Height="350" Width="325.667"
        Closed="onWindowClosed">
    <Grid>
        <Button x:Name="launchButton" Content="Launch" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="225,10,0,0" Click="onLaunchButtonClicked" Height="22"/>
        <ComboBox x:Name="detectedGamesComboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="210" ItemsSource="{Binding DetectedOriginGameNames}" SelectionChanged="onGameSelectionChanged" SelectedIndex="0"/>
    </Grid>
</Window>
